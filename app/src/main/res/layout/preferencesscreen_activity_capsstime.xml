<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/pref_capsstime_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/preferencesscreen_item_height"
        android:layout_marginStart="@dimen/preferencesscreen_margin_LR"
        android:layout_marginTop="@dimen/preferencesscreen_margin_Top"
        android:layout_marginEnd="@dimen/preferencesscreen_margin_LR"
        android:layout_marginBottom="@dimen/preferencesscreen_margin_Bottom"
        app:layout_constraintBottom_toBottomOf="0"
        app:layout_constraintEnd_toEndOf="0"
        app:layout_constraintStart_toStartOf="0"
        app:layout_constraintTop_toTopOf="0"
        app:srcCompat="@drawable/homescreen_rv_item_bg" />

    <TextView
        android:id="@+id/pref_capsstime_text"
        style="@style/preferencesscreen_item_style"
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/preferencesscreen_margin_LR"
        android:text="@string/preferencesscreen_capsstime"
        app:layout_constraintBottom_toBottomOf="@+id/pref_capsstime_bg"
        app:layout_constraintStart_toStartOf="@+id/pref_capsstime_bg"
        app:layout_constraintTop_toTopOf="@+id/pref_capsstime_bg"
        app:layout_constraintVertical_bias="0.18" />

    <ImageButton
        android:id="@+id/pref_capsstime_minus"
        android:layout_width="@dimen/preferencesscreen_sscaptime_plus_minus_size"
        android:layout_height="@dimen/preferencesscreen_sscaptime_plus_minus_size"
        android:layout_marginEnd="@dimen/preferencesscreen_sscaptime_plus_minus_margin"
        android:background="@drawable/bottomnav_circle_ripple"
        app:layout_constraintBottom_toBottomOf="@+id/pref_capsstime_time"
        app:layout_constraintEnd_toStartOf="@+id/pref_capsstime_time"
        app:layout_constraintTop_toTopOf="@+id/pref_capsstime_time"
        app:srcCompat="@drawable/settingscreen_minus" />

    <TextView
        android:id="@+id/pref_capsstime_time"
        style="@style/preferencesscreen_item_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/preferencesscreen_sscaptime_plus_minus_margin"
        android:text="20 seconds"
        app:layout_constraintBottom_toBottomOf="@+id/pref_capsstime_bg"
        app:layout_constraintEnd_toStartOf="@+id/pref_capsstime_plus"
        app:layout_constraintTop_toTopOf="@+id/pref_capsstime_bg"
        app:layout_constraintVertical_bias="0.76" />

    <ImageButton
        android:id="@+id/pref_capsstime_plus"
        android:layout_width="@dimen/preferencesscreen_sscaptime_plus_minus_size"
        android:layout_height="@dimen/preferencesscreen_sscaptime_plus_minus_size"
        android:layout_marginEnd="@dimen/preferencesscreen_margin_LR"
        android:background="@drawable/bottomnav_circle_ripple"
        app:layout_constraintBottom_toBottomOf="@+id/pref_capsstime_time"
        app:layout_constraintEnd_toEndOf="@+id/pref_capsstime_bg"
        app:layout_constraintTop_toTopOf="@+id/pref_capsstime_time"
        app:srcCompat="@drawable/settingscreen_plus" />
</androidx.constraintlayout.widget.ConstraintLayout>
