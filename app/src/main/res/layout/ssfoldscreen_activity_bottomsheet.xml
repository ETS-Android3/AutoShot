<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/ssfoldscreen_bottomsheet_add_from_gallery_TV"
        style="@style/homescreen_cap_item_subheader_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ssfoldscreen_bottomsheet_textview_margin_left"
        android:layout_weight="1"
        android:text="Add from gallery"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/ssfoldscreen_bottomsheet_add_from_gallery_IV"
        app:layout_constraintStart_toEndOf="@+id/ssfoldscreen_bottomsheet_add_from_gallery_IV"
        app:layout_constraintTop_toTopOf="@+id/ssfoldscreen_bottomsheet_add_from_gallery_IV" />

    <ImageView
        android:id="@+id/ssfoldscreen_bottomsheet_add_from_gallery_IV"
        android:layout_width="@dimen/ssfoldscreen_bottomsheet_img_size"
        android:layout_height="@dimen/ssfoldscreen_bottomsheet_img_size"
        android:layout_marginStart="@dimen/ssfoldscreen_bottomsheet_textview_margin_left"
        app:layout_constraintBottom_toBottomOf="@+id/ssfoldscreen_bottomsheet_add_from_gallery_IB"
        app:layout_constraintStart_toStartOf="0"
        app:layout_constraintTop_toTopOf="0"
        app:srcCompat="@drawable/settingscreen_plus" />

    <ImageButton
        android:id="@+id/ssfoldscreen_bottomsheet_add_from_gallery_IB"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/ssfoldscreen_mid_panel_square_ripple"
        app:layout_constraintTop_toTopOf="0" />

    <TextView
        android:id="@+id/ssfoldscreen_bottomsheet_start_autocapture_TV"
        style="@style/homescreen_cap_item_subheader_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ssfoldscreen_bottomsheet_textview_margin_left"
        android:text="Start AutoCapture"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/ssfoldscreen_bottomsheet_start_autocapture_IV"
        app:layout_constraintStart_toEndOf="@+id/ssfoldscreen_bottomsheet_start_autocapture_IV"
        app:layout_constraintTop_toTopOf="@+id/ssfoldscreen_bottomsheet_start_autocapture_IV" />

    <ImageView
        android:id="@+id/ssfoldscreen_bottomsheet_start_autocapture_IV"
        android:layout_width="@dimen/ssfoldscreen_bottomsheet_img_size"
        android:layout_height="@dimen/ssfoldscreen_bottomsheet_img_size"
        android:layout_marginStart="@dimen/ssfoldscreen_bottomsheet_textview_margin_left"
        app:layout_constraintBottom_toBottomOf="@+id/ssfoldscreen_bottomsheet_start_autocapture_IB"
        app:layout_constraintStart_toStartOf="@+id/ssfoldscreen_bottomsheet_start_autocapture_IB"
        app:layout_constraintTop_toBottomOf="@+id/ssfoldscreen_bottomsheet_add_from_gallery_IB"
        app:srcCompat="@drawable/overlayscreen_play" />

    <ImageButton
        android:id="@+id/ssfoldscreen_bottomsheet_start_autocapture_IB"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/ssfoldscreen_mid_panel_square_ripple"
        app:layout_constraintEnd_toEndOf="0"
        app:layout_constraintStart_toStartOf="0"
        app:layout_constraintTop_toBottomOf="@+id/ssfoldscreen_bottomsheet_add_from_gallery_IB" />
</androidx.constraintlayout.widget.ConstraintLayout>
