<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/pref_autoss2pdf_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/preferencesscreen_item_height"
        android:layout_marginStart="@dimen/preferencesscreen_margin_LR"
        android:layout_marginTop="@dimen/preferencesscreen_margin_Top"
        android:layout_marginEnd="@dimen/preferencesscreen_margin_LR"
        android:layout_marginBottom="@dimen/preferencesscreen_margin_Bottom"
        app:layout_constraintBottom_toBottomOf="0"
        app:layout_constraintEnd_toEndOf="0"
        app:layout_constraintStart_toStartOf="0"
        app:layout_constraintTop_toTopOf="0"
        app:srcCompat="@drawable/homescreen_rv_item_bg" />

    <CheckBox
        android:id="@+id/preferencesscreen_autossdelexport_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/checkbox_color"
        android:translationX="@dimen/checkbox_tanslation"
        app:layout_constraintBottom_toBottomOf="@+id/pref_autoss2pdf_bg"
        app:layout_constraintEnd_toEndOf="@+id/pref_autoss2pdf_bg"
        app:layout_constraintTop_toTopOf="@+id/pref_autoss2pdf_bg" />

    <TextView
        android:id="@+id/pref_autoss2pdf_text"
        style="@style/preferencesscreen_item_style"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/preferencesscreen_margin_LR"
        android:text="@string/preferencesscreen_ssdelexport"
        app:layout_constraintBottom_toBottomOf="@+id/pref_autoss2pdf_bg"
        app:layout_constraintStart_toStartOf="@+id/pref_autoss2pdf_bg"
        app:layout_constraintTop_toTopOf="@+id/pref_autoss2pdf_bg" />
</androidx.constraintlayout.widget.ConstraintLayout>
